# LIBUUID options

choice
    bool
    prompt "libuuid source"
# Don't remove next line
# CT_INSERT_VERSION_BELOW

config LIBUUID_E2FSPROGSLIBS
    bool
    prompt "e2fsprogs-libs"

config LIBUUID_UTILLINUX
    bool
    prompt "util-linux"

endchoice

choice
    bool
    depends on LIBUUID_UTILLINUX
    prompt "util-linux version"
# Don't remove next line
# CT_INSERT_VERSION_BELOW

config LIBUUID_UTILLINUX_V_2_28
    bool
    prompt "2.28"

endchoice

config LIBUUID_UTILLINUX_VERSION
    string
# Don't remove next line
# CT_INSERT_VERSION_STRING_BELOW
    default "2.28" if LIBUUID_UTILLINUX_V_2_28

choice
    bool
    depends on LIBUUID_E2FSPROGSLIBS
    prompt "e2fsprogs-libs version"
# Don't remove next line
# CT_INSERT_VERSION_BELOW

config LIBUUID_E2FSPROGSLIBS_V_1_43_3
    bool
    prompt "1.43.3"

endchoice

config LIBUUID_E2FSPROGSLIBS_VERSION
    string
# Don't remove next line
# CT_INSERT_VERSION_STRING_BELOW
    default "1.43.3" if LIBUUID_E2FSPROGSLIBS_V_1_43_3

