+ +    }
+ +  if ((insn & 0xfc1f07ff) == 0x7c0004be) /*mffgpr */
+ +    {
+ +      unsigned long *regs = (unsigned long *) ctx->regs;
+ +      unsigned fpr = (insn >> 21) & 0x1f;
+ +      unsigned gpr = (insn >> 11) & 0x1f;
