+ +	  newp->last_fd = last;
+ +	  last->next_fd = newp;
+ +	  if (newp->next_fd != NULL)
+ +	    newp->next_fd->last_fd = newp;
+ +	}
+ +
+ +      newp->next_prio = NULL;
+ +      if (newp->kioctx != KCTX_NONE)
+ +	newp->prev_prio = NULL;
+ +      return yes;
+ +    }
+ +}
