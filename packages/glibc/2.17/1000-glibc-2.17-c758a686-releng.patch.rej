+ +      return;
+ +    }
+ +  if ((insn & 0xfc00ffff) == 0x7c0000f4) /* popcntb */
+ +    {
+ +      unsigned long *regs = (unsigned long *) ctx->regs;
+ +      unsigned dest = (insn >> 16) & 0x1f;
+ +      unsigned src = (insn >> 21) & 0x1f;
+ +      unsigned long res = 0;
+ +      int i;
+ +
+ +      regs[dest] = popcntb (regs[src]);
+ +      ctx->regs->nip += 4;
+ +      return;
+ +    }
