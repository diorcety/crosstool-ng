+ +static pthread_barrier_t b;
+ +
+ +
+ +static void
+ +thrfct (sigval_t arg)
+ +{
+ +  int e = pthread_barrier_wait (&b);
+ +  if (e != 0 && e != PTHREAD_BARRIER_SERIAL_THREAD)
+ +    {
+ +      puts ("thread: barrier_wait failed");
+ +      exit (1);
+ +    }
+ +}
