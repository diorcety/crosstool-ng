+ +  struct sigaction sa;
+ +  sa.sa_handler = SIG_DFL;
+ +  sigemptyset (&sa.sa_mask);
+ +  sa.sa_flags = 0;
+ +  sigaction (signal, &sa, NULL);
+ +  raise (signal);
+ +}
