+ +		}
+ +	    }
+ +
+ +	  waitlist->counter = total;
+ +	  waitlist->sigev = *sig;
+ +	}
+ +    }
+ +
+ +  /* Release the mutex.  */
+ +  pthread_mutex_unlock (&__aio_requests_mutex);
+ +
+ +  return result;
+ +}
