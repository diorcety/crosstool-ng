+ +int
+ +aio_cancel (fildes, aiocbp)
+ +     int fildes;
+ +     struct aiocb *aiocbp;
+ +{
+ +  struct requestlist *req = NULL;
+ +  int result = AIO_ALLDONE;
+ +
+ +  /* If fildes is invalid, error. */
+ +  if (fcntl (fildes, F_GETFL) < 0)
+ +    {
+ +      __set_errno (EBADF);
+ +      return -1;
+ +    }
+ +
+ +  /* Request the mutex.  */
+ +  pthread_mutex_lock (&__aio_requests_mutex);
+ +
